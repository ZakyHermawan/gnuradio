<?xml version="1.0"?>
<!--
###################################################
## UHD Simple Sink
###################################################
 -->
<block>
	<name>UHD Simple Sink</name>
	<key>uhd_simple_sink</key>
	<category>UHD</category>
	<import>from gnuradio import uhd</import>
	<make>uhd.simple_sink($args, "$type.type")
self.$(id).set_samp_rate($samp_rate)
self.$(id).set_center_freq($center_freq)</make>
	<callback>set_samp_rate($samp_rate)</callback>
	<callback>set_center_freq($center_freq)</callback>
	<param>
		<name>Input Type</name>
		<key>type</key>
		<type>enum</type>
		<option>
			<name>Complex</name>
			<key>complex</key>
			<opt>type:32fc</opt>
			<opt>vlen:1</opt>
		</option>
		<option>
			<name>Short</name>
			<key>short</key>
			<opt>type:16sc</opt>
			<opt>vlen:2</opt>
		</option>
	</param>
	<param>
		<name>Args</name>
		<key>args</key>
		<value></value>
		<type>string</type>
	</param>
	<param>
		<name>Samp Rate (Sps)</name>
		<key>samp_rate</key>
		<value>samp_rate</value>
		<type>real</type>
	</param>
	<param>
		<name>Center Freq (Hz)</name>
		<key>center_freq</key>
		<type>real</type>
	</param>
	<sink>
		<name>out</name>
		<type>$type</type>
		<vlen>$type.vlen</vlen>
	</sink>
	<doc>
	</doc>
</block>
